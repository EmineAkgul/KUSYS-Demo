@model KUSYS_Demo.Application.Model.CreateStudentModel

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" class="form-control" value="@Model.Student.Id" />
            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label"></label>
                <input asp-for="Student.FirstName" class="form-control" value="@Model.Student.FirstName" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" value="@Model.Student.LastName" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.BirthDate" class="control-label"></label>
                <input type="date" asp-for="Student.BirthDate" class="form-control" value="@(Model.Student.BirthDate != null ? Model.Student.BirthDate.Value.ToString("yyyy-MM-dd") : null )" />
                <span asp-validation-for="Student.BirthDate" class="text-danger"></span>
            </div>
            <div class=" form-group">
                <label asp-for="Student.CourseId" class="control-label">Course</label>
                <select asp-for="Student.CourseId" class="form-control">

                    @if (Model.Courses != null)
                    {
                        @foreach (var item in Model.Courses)
                        {
                            if (Model.Student.CourseId == item.Id)
                            {
                                <option value="@item.Id" selected>@item.CourseId - @item.CourseName</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.CourseId - @item.CourseName</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="Student.CourseId" class="text-danger"></span>
            </div>

            <div class="form-group mt-5">
                <input type="submit" value="Edit" class="btn btn-primary form-cont" />
            </div>
        </form>
    </div>
    <div class="col-md-1"></div>

</div>